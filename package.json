{
  "name": "iot-backend",
  "version": "1.0.0",
  "description": "This package consist of an real-time iot device monitoring service backend.",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "eslint . --ext .ts",
    "build": "tsc -p . && ncp src/graphql/schemas/ dist/graphql/schemas",
    "dev": "nodemon --watch src -e ts,gql --exec npm run start",
    "prestart": "npm run build",
    "start": "node .",
    "test": "jest",
    "format": "prettier \"src/**/*.ts\" --write --loglevel warn",
    "script": "ts-node ./scripts/seed.ts"
  },
  "author": "Anesh Gupta <anesh.gupta25@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.26.0",
    "@eslint/js": "^9.20.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/lodash": "^4.17.15",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^22.13.4",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.1",
    "globals": "^15.15.0",
    "jest": "^29.7.0",
    "jest-html-reporter": "^4.0.1",
    "ncp": "^2.0.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0"
  },
  "dependencies": {
    "@apollo/server": "^4.11.3",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "graphql": "^16.10.0",
    "graphql-import-node": "^0.0.5",
    "graphql-request": "^7.1.2",
    "graphql-tools": "^9.0.13",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "log4js": "^6.9.1",
    "mongoose": "^8.10.1",
    "socket.io": "^4.8.1"
  }
}
